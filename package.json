{
  "name": "autostickman",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "app/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=production electron .",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"pnpm dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "node install-binaries.mjs && pnpm build && electron-builder",
    "start": "pnpm build && pnpm electron",
    "verify": "node verify-setup.mjs",
    "install-binaries": "node install-binaries.mjs"
  },
  "build": {
    "appId": "com.autostickman.app",
    "productName": "AutoChar Studio",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "app/**/*",
      "uploads/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "app/resources",
        "to": "resources",
        "filter": ["**/*"]
      },
      {
        "from": "app/models",
        "to": "models",
        "filter": ["**/*.bin"]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@types/jszip": "^3.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "multer": "^2.0.1",
    "nodejs-whisper": "0.2.9",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.10",
    "upng-js": "^2.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^1.4.13",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/upng-js": "^2.1.5",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "form-data": "^4.0.3",
    "globals": "^16.0.0",
    "node-fetch": "^3.3.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  }
}
